# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=EventSync

# WhatsApp Integration (1Confirmed)
VITE_WHATSAPP_API_URL=https://api.1confirmed.com
VITE_WHATSAPP_API_KEY=your_1confirmed_api_key_here

# Environment
VITE_NODE_ENV=development

# Features flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_WHATSAPP=true
VITE_ENABLE_SMS=false
VITE_ENABLE_EMAIL=true

# Sentry (Error tracking - optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Google Analytics (optional)
VITE_GA_TRACKING_ID=your_google_analytics_id_here

# App Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=csv,xlsx,json
VITE_DEFAULT_TIMEZONE=Europe/Paris
VITE_DEFAULT_LOCALE=fr-FR

# Security
VITE_CSRF_TOKEN_NAME=X-CSRF-TOKEN

# Development
VITE_DEBUG=false
VITE_LOG_LEVEL=info